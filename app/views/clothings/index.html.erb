<div class="clothing-container">
<%= link_to "T-shirts", t_shirts_clothings_path, class: "btn" %>
<%= link_to "Headwear", headwear_clothings_path, class: "btn" %>
<%= link_to "Shoes", shoes_clothings_path, class: "btn" %>
<%= link_to "Jackets", jackets_clothings_path, class: "btn" %>
<%= link_to "Sweaters", sweaters_clothings_path, class: "btn" %>
<%= link_to "Business Suits", business_suits_clothings_path, class: "btn" %>

  <% @clothings.each do |clothing| %>
  <%= link_to clothing_path(clothing.id) do %>
    <div class="clothing-item">
      <div class="responsive-container">
        <img class="responsive-image" src="<%= clothing.image_url %>" alt="Clothing Image"/>
       <div class="clothing-name">
        <%= clothing.name %>
       </div>
       <div class="clothing-prise">
        <%= clothing.price%>$
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>