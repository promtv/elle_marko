<div style="display: flex; gap: 20px;">
  <%= link_to "for_men", jackets_clothings_path(for_whom: "for_men"), class: "filter-box" %>
  <%= link_to "for_women", jackets_clothings_path(for_whom: "for_women"), class: "filter-box" %>
  <%= link_to "unisex", jackets_clothings_path(for_whom: "unisex"), class: "filter-box" %>
  <%= link_to "all", jackets_clothings_path, class: "filter-box" %>
</div>
jackets
<div class="clothing-container">
<% @jackets.each do |jackets| %>
  <%= link_to clothing_path(jackets.id) do %>
    <div class="clothing-item">
      <div class="responsive-container">
        <img class="responsive-image" src="<%= jackets.image_url %>" alt="Clothing Image"/>
       <div class="clothing-name">
        <%= jackets.name %>
       </div>
       <div class="clothing-prise">
        <%= jackets.price%>$
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>