<div style="display: flex; gap: 20px;">
  <%= link_to "for_men", sweaters_clothings_path(for_whom: "for_men"), class: "filter-box" %>
  <%= link_to "for_women", sweaters_clothings_path(for_whom: "for_women"), class: "filter-box" %>
  <%= link_to "unisex", sweaters_clothings_path(for_whom: "unisex"), class: "filter-box" %>
  <%= link_to "all", sweaters_clothings_path, class: "filter-box" %>
</div>
sweaters
<div class="clothing-container">
<% @sweaters.each do |sweaters| %>
  <%= link_to clothing_path(sweaters.id) do %>
    <div class="clothing-item">
      <div class="responsive-container">
        <img class="responsive-image" src="<%= sweaters.image_url %>" alt="Clothing Image"/>
       <div class="clothing-name">
        <%= sweaters.name %>
       </div>
       <div class="clothing-prise">
        <%= sweaters.price%>$
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>