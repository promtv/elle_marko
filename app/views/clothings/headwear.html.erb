<div class="sort-controls">
  <%= link_to "Сначала дешёвые", headwear_clothings_path(sort_by: "price", sort: "asc", for_whom: params[:for_whom]), class: "btn" %>
  <%= link_to "Сначала дорогие", headwear_clothings_path(sort_by: "price", sort: "desc", for_whom: params[:for_whom]), class: "btn" %>
  <%= link_to "По имени A-Я", headwear_clothings_path(sort_by: "name", sort: "asc", for_whom: params[:for_whom]), class: "btn" %>
  <%= link_to "По имени Я-А", headwear_clothings_path(sort_by: "name", sort: "desc", for_whom: params[:for_whom]), class: "btn" %>
</div>
<div style="display: flex; gap: 20px;">
  <%= link_to "for_men", headwear_clothings_path(for_whom: "for_men"), class: "filter-box" %>
  <%= link_to "for_women", headwear_clothings_path(for_whom: "for_women"), class: "filter-box" %>
  <%= link_to "unisex", headwear_clothings_path(for_whom: "unisex"), class: "filter-box" %>
  <%= link_to "all", headwear_clothings_path, class: "filter-box" %>
</div>
headwear
<div class="clothing-container">
<% @headwear.each do |headwear| %>
  <%= link_to clothing_path(headwear.id) do %>
    <div class="clothing-item">
      <div class="responsive-container">
    <% if headwear.image.attached? %>
      <%= image_tag headwear.image,class: "responsive-image" %>
      <% end %>
       <div class="clothing-name">
        <%= headwear.name %>
       </div>
       <div class="clothing-prise">
        <%= headwear.price%>$
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>